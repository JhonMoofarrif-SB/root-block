{
  "name": "@rb/root",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Root Block Design System - Multi-brand Enterprise Design System",
  "scripts": {
    "build": "pnpm run build:all",
    "build:all": "pnpm run clean && turbo run build && pnpm --filter @rb/bundle run copy:all",
    "dev": "pnpm --filter @rb/bundle dev",
    "clean": "turbo run clean && rm -rf examples/dist/*.min.* packages/docs/.storybook/*.min.css",
    "storybook": "pnpm run build:all && pnpm --filter @rb/docs storybook",
    "demo": "pnpm run build:all && cd examples && npx serve -p 3000",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "turbo run test",
    "validate:css": "node scripts/validate-css-standards.js",
    "validate:css:file": "node scripts/validate-css-standards.js"
  },
  "keywords": [
    "design-system",
    "multi-brand",
    "web-components",
    "lit",
    "css",
    "design-tokens"
  ],
  "author": "Root Block",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/root-bloock.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/root-bloock/issues"
  },
  "homepage": "https://github.com/tu-usuario/root-bloock#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^8.57.0",
    "@playwright/test": "^1.42.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^1.3.1",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "turbo": "^1.12.5",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.4"
}
