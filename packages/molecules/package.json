{
  "name": "@bolivar-ui/molecules",
  "version": "1.0.0",
  "description": "Web Components complejos con Lit para Bolivar UI Design System",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./modal": "./dist/components/modal/modal.js",
    "./date-picker": "./dist/components/date-picker/date-picker.js",
    "./dropdown": "./dist/components/dropdown/dropdown.js",
    "./toast": "./dist/components/toast/toast.js",
    "./toast-manager": "./dist/components/toast/toast-manager.js"
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "web-components",
    "lit",
    "design-system",
    "modal",
    "date-picker",
    "dropdown",
    "toast",
    "notifications"
  ],
  "author": "Bolivar UI",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^1.3.1",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  }
}
